# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "memory"
order += "tztime local"

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " üì∂: %speed "
        format_down = " üì∂: –ù–µ—Ç —Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è "
}


wireless _first_ {
        format_up = " Ôá´ %essid - %quality "
        format_down = "Ôá´down"
}

volume master {
        format = " –ó–≤—É–∫ ÔÄ®   [%volume]"
        format_muted = " –ó–≤—É–∫ ÔÄ¶   [%volume]"
        device = "1"
        mixer = "Master"
        mixer_idx = 0
}

battery all {
    # —à–∞–±–ª–æ–Ω –≤—ã–≤–æ–¥–∞, –º–æ–∂–Ω–æ –¥–æ–ø–æ–ª–Ω–∏—Ç—å
    # –æ—Å—Ç–∞–≤—à–∏–º—Å—è –≤—Ä–µ–º–µ–Ω–µ–º —Ä–∞–±–æ—Ç—ã %emptytime
    # —ç–Ω–µ—Ä–≥–æ–ø–æ—Ç—Ä–µ–±–ª–µ–Ω–∏–µ–º %consumption –≤ –≤–∞—Ç—Ç–∞—Ö
    format = "%status %percentage"

    # true - –ø–æ–∫–∞–∑ –ø—Ä–æ—Ü–µ–Ω—Ç–∞ –∑–∞—Ä—è–¥–∞ –æ—Ç 0 –¥–æ 100
    # false - –ø–æ–∫–∞–∑ –ø—Ä–æ—Ü–µ–Ω—Ç–∞ –∑–∞—Ä—è–¥–∞ –æ—Ç 0 –¥–æ n, —Å —É—á–µ—Ç–æ–º
    # –∏–∑–Ω–æ—à–µ–Ω–Ω–æ—Å—Ç–∏ –∞–∫–∫—É–º—É–ª—è—Ç–æ—Ä–∞
    last_full_capacity = true
    format_down = "[No battery]"
    status_chr = "[‚ö°Ô∏è]" # —Å—Ç–∞—Ç—É—Å –ø–æ–¥–∑–∞—Ä—è–¥–∫–∏
    status_bat = "ÔâÅ" # —Å—Ç–∞—Ç—É—Å –≤ —Ä–µ–∂–∏–º–µ —Ä–∞–±–æ—Ç—ã –æ—Ç –±–∞—Ç–∞—Ä–µ–∏
    status_unk = "üî•" # –Ω–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π —Å—Ç–∞—Ç—É—Å
    status_full = "ÔâÄ" # —Å—Ç–∞—Ç—É—Å –ø–æ–ª–Ω–æ–≥–æ –∑–∞—Ä—è–¥–∞
    path = "/sys/class/power_supply/BAT%d/uevent"

    # –Ω–∏–∂–Ω–∏–π –ø–æ—Ä–æ–≥ –∑–∞—Ä—è–¥–∞, –ø–æ—Å–ª–µ –∫–æ—Ç–æ—Ä–æ–≥–æ –±–ª–æ–∫
    # –±—É–¥–µ—Ç –æ–∫—Ä–∞—à–µ–Ω –≤ "color_bad" (–ø–æ —É–º–æ–ª—á–∞–Ω–∏—é –∫—Ä–∞—Å–Ω—ã–π)
    # –ø–æ–¥—Ä–æ–±–Ω–µ–µ –≤ man i3status
    low_threshold = 10
}

tztime local {
        format = "  ÔÅ≥ [%d/%m/%Y]  ÔÄó [%H:%M:%S] "
}

load {
        format = " CPU: ÔÉ§ [%1min]"
}

